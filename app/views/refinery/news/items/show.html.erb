<%= render :partial => "/refinery/news/items/info" if @item.category == 0 %> 
<%= render :partial => "/refinery/news/items/notice" if @item.category == 1 %> 

<% content_for :body_content_title, @item.title %>

<% content_for :body_content_left do %>
	<h1>
		<small><%= l(@item.publish_date, :format => "%Y / %m / %d") %></small>
	</h1>
	<article class="news_item">

		<% if @item.source.present? %>
			<p>
				<small><%= t('.source') %> <%= @item.source %></small>
			</p>
		<% end %>
		<%= @item.body.html_safe %>
		<p class="news-back">
			<%= link_to t('.back_to_index'), refinery.news_items_path(:category => @item.category) %>
		</p>
	</article>
<% end %>

<%= render :partial => "/refinery/content_page" %> 
<div style="clear:both"></div>
	 </div>
</div>

</body>
</html>
